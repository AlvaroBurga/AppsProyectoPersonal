<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tituloVideojuegoAdmin"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/titulo"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imagenVideojuegoAdmin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/videojuegoConsolaAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consola"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imagenVideojuegoAdmin"
        app:layout_constraintTop_toBottomOf="@+id/tituloVideojuegoAdmin" />

    <ImageView
        android:id="@+id/imagenVideojuegoAdmin"
        android:layout_width="66dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:contentDescription="@string/presionar"
        app:layout_constraintBottom_toBottomOf="@+id/videojuegoConsolaAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tituloVideojuegoAdmin"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/due_o"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/tituloVideojuegoAdmin"
        app:layout_constraintStart_toStartOf="@+id/imagenVideojuegoAdmin"
        app:layout_constraintTop_toBottomOf="@+id/imagenVideojuegoAdmin" />

    <TextView
        android:id="@+id/dueÃ±oNombreApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/poner_nombre_y_apellido_del_due_o"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/imagenVideojuegoAdmin"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/texview1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/estado"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/ponerEstadoCuandoListaTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/texview1000"
        app:layout_constraintStart_toEndOf="@+id/texview1000" />

</androidx.constraintlayout.widget.ConstraintLayout>