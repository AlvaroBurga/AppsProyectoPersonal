<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tituloVideojuegoHistorial"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/titulo"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imagenVideojuegoHistorial"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/videojuegoHistorialConsola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consola"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tituloVideojuegoHistorial"
        app:layout_constraintStart_toStartOf="@+id/tituloVideojuegoHistorial"
        app:layout_constraintTop_toBottomOf="@+id/tituloVideojuegoHistorial" />

    <ImageView
        android:id="@+id/imagenVideojuegoHistorial"
        android:layout_width="66dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:contentDescription="@string/presionar"
        app:layout_constraintBottom_toBottomOf="@+id/videojuegoHistorialConsola"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tituloVideojuegoHistorial"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/btn_dialog" />

    <Button
        android:id="@+id/accionVideojuegoHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accion"
        app:layout_constraintEnd_toEndOf="@+id/estadoVideojuegoHistorial"
        app:layout_constraintStart_toStartOf="@+id/estadoVideojuegoHistorial"
        app:layout_constraintTop_toBottomOf="@+id/estadoVideojuegoHistorial" />

    <TextView
        android:id="@+id/estadoVideojuegoHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/estado"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/videojuegoHistorialConsola"
        app:layout_constraintStart_toEndOf="@+id/tituloVideojuegoHistorial"
        app:layout_constraintTop_toTopOf="@+id/tituloVideojuegoHistorial" />
</androidx.constraintlayout.widget.ConstraintLayout>